<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.interfaces.TestInterface"
    android:orientation="vertical">
    <include layout="@layout/action_bar_toolbar"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:padding="30dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_border_item"
                app:boxCornerRadiusBottomEnd="@dimen/cardview_compat_inset_shadow">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvwResponse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black1"
                    android:textSize="18sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvwBodyResponse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black1"

                    android:textSize="18sp"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="30dp"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApiRest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Gray"
                    android:textColorHint="@color/White"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:hint="@string/Add_Test"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDowload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Gray"
                    android:textColorHint="@color/White"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:hint="@string/Dowload"
                    />


            </com.google.android.material.button.MaterialButtonToggleGroup>
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:indeterminate="true"
                android:visibility="gone"
                android:layout_height="wrap_content" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>